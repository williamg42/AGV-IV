    fragment@0 {
        target = <&am33xx_pinmux>;
        __overlay__ {
        		 
	 		 bb_uart1_pins: pinmux_bb_uart1_pins {
            		 	pinctrl-single,pins = <
                                        0x184 0x20 /* P9.24 uart1_txd.uart1_txd MODE0 OUTPUT (TX) */
